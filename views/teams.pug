extends layout.pug

mixin teamCard(team)
    .teamCard
        a(href=`/teams/info/${team.name}`)
        .logo 
            img(src=`../${team.logo}` width="100%" height="100%")
        .info
            h2
                a(href=`/teams/info/${team.name}`)= team.name 
    
block content 
    .team_main
        if league==null
            .all-league-header
                h1 All teams
                p All hockey teams from USA and Canada across the NHL, PWHL, CHL, WHL, OHL and QMJHL!
        else 
            for singleleague in league
                .league_header
                    .league-header--logo
                        img(src=`../${singleleague.logo}` width="100%")
                    .league-header--info
                        h1= singleleague.name
                        h3= singleleague.fullname
                        p= singleleague.description    
        .team_card_container
            for team in leagueteams 
                +teamCard(team)