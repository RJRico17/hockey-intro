extends layout.pug 

mixin penalty(penalty) 
    .penalty-info-card
        .penalty-info-gif
            img(src=`../${penalty.example}` width="100%" height="100%")
        .penalty-info-info
            h1= penalty.name
            h3= penalty.penalty
            h3= penalty.description 

block content
    .penalty-main
        for singlepenalty in penalty
            +penalty(singlepenalty)