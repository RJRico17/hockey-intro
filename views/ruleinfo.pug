extends layout.pug 

mixin ruleCard(rule) 
    .penalty-info-card
        .penalty-info-gif
            img(src=`../img/${rule.example}` width="100%" height="100%")
        .penalty-info-info
            h2= rule.rule 
            p= rule.description

block content 
    .penalty-main
        for singleRule in rule
            +ruleCard(singleRule)